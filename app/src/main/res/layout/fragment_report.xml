<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FragmentReport"
    android:orientation="vertical"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >

        <ImageView
            android:id="@+id/img_red"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_blue"
            android:adjustViewBounds="true"
            android:background="@drawable/back_buttons_ripple_effect"
            android:src="@drawable/ic_poly_red"/>

        <ImageView
            android:id="@+id/img_blue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@drawable/back_buttons_ripple_effect"
            android:src="@drawable/ic_poly_blue"/>

        <ImageView
            android:id="@+id/img_green"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/img_blue"
            android:adjustViewBounds="true"
            android:background="@drawable/back_buttons_ripple_effect"
            android:src="@drawable/ic_poly_green"/>
    </RelativeLayout>




    <ImageView
        android:id="@+id/img_chart"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        />
</LinearLayout>